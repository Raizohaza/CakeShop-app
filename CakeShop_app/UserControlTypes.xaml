<UserControl x:Class="CakeShop_app.UserControlTypes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CakeShop_app"
             mc:Ignorable="d" 
             d:DesignHeight="499" d:DesignWidth="1002" Loaded="UserControl_Loaded">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="755*"/>
            <ColumnDefinition Width="247*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Image x:Name="Cake_ava" Source="Images\cake_ava.jpg" Stretch="Uniform"/>
        </Grid>
        <Grid Grid.Column="1">
            <ScrollViewer>
                <StackPanel>
                    <Image x:Name="Fresh_Bread_ava" Source="Images\bread_ava.jpg"  Stretch="UniformToFill"/>
                    <Image x:Name="Sweet_Bread_ava" Source="Images\sweet_bread_ava.jpg" Stretch="UniformToFill"/>
                    <Image x:Name="Gato_Bread_ava" Source="Images\gato_ava.jpg" Stretch="UniformToFill"/>
                    <Image x:Name="trang_mieng_ava" Source="Images\trang_mieng_ava.jpg"  Stretch="UniformToFill" />
                </StackPanel>
            </ScrollViewer>
        </Grid>

    </Grid>
</UserControl>
