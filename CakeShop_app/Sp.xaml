<Window x:Class="CakeShop_app.Sp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CakeShop_app"
        mc:Ignorable="d"
        Height="450" Width="550" Loaded="Window_Loaded">
    <Border Background="White" BorderThickness="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <CheckBox x:Name="CheckBox" Content="Do not show this again!!!" FontWeight="Medium" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" Margin="199,70,172,10" Grid.Row="1" />
            <Border BorderThickness="0">
                <Image Source="{Binding }" Margin="134,9,113,187"/>
            </Border>
            <TextBlock x:Name="CakeName" Text="{Binding}" FontSize="18" FontWeight="Medium" Grid.Row="0" Margin="134,159,114,137"/>
            <TextBlock x:Name="CakeDetail" Text="{Binding}" FontSize="14" Grid.Row="0" Margin="74,204,59,10"/>
            <Button x:Name="Next_button" Content="Start!!!" Background="OrangeRed" FontWeight="Medium" Click="Next_button_Click" Grid.Row="1" Margin="244,10,214,58"/>
        </Grid>

    </Border>

</Window>
