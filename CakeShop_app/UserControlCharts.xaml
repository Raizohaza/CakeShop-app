<UserControl x:Class="CakeShop_app.UserControlCharts"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CakeShop_app"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Pink">
        <lvc:CartesianChart Series="{Binding columnChart}" Name="CartesianChart"  LegendLocation="Right" DataClick="CartesianChart_DataClick" Height="auto" Width="698" Canvas.Left="250" Canvas.Top="30">

        </lvc:CartesianChart>
    </Grid>
</UserControl>
